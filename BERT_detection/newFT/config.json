{
  "model_name": "tohoku-nlp/bert-base-japanese-whole-word-masking",
  "max_length": 128,
  "batch_size": 32,
  "num_epochs": 6,
  "learning_rate": 5e-7,
  "weight_decay": 0.001,
  "num_warmup_steps_ratio": 0.1,
  "early_stopping_patience": 3,
  "id2label": {
    "0": "NOTIRONY",
    "1": "IRONY"
  },
  "label2id": {
    "NOTIRONY": 0,
    "IRONY": 1
  },
  "train_csv": "./train.csv",
  "eval_csv": "./eval.csv",
  "log_dir": "training_logs",
  "model_dir": "models",
  "seed": 42
}